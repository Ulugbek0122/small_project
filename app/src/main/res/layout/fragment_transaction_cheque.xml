<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar
        android:background="#2196F3"
        android:id="@+id/tool_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/btn_toolbar_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:padding="12dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_transaction_info"
        android:paddingTop="12dp"
        android:paddingHorizontal="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/cheque_transaction_id"
            android:textSize="14sp"
            tools:text="121212121212"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:layout_marginTop="11dp"
            android:layout_width="0dp"
            android:gravity="end"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Номер транзации"
            android:textColor="#B3B4C6"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/cheque_transaction_id"
            app:layout_constraintBottom_toBottomOf="@id/cheque_transaction_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/view_1"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cheque_transaction_id"
            android:background="@drawable/line_dashed"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>



        <TextView
            android:id="@+id/date_time"
            android:gravity="end"
            android:textSize="14sp"
            tools:text="12.20.2023  14:34"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@id/view_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Дата и время"
            android:textColor="#B3B4C6"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/date_time"
            app:layout_constraintBottom_toBottomOf="@id/date_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/line_dashed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_time" />

        <TextView
            android:id="@+id/amount"
            android:textSize="14sp"
            tools:text="400 000 сум"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@id/view_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Сумма"
            android:textColor="#B3B4C6"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/amount"
            app:layout_constraintBottom_toBottomOf="@id/amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingVertical="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/amount"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_success"
                android:src="@drawable/ic_check_filled_red"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:layout_marginStart="6dp"
                android:id="@+id/paid_status"
                android:text="Успешно оплачено"
                android:textColor="#06AE0D"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:visibility="gone"
        android:textSize="22sp"
        android:text="Операция отклонена"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>